#:kivy 1.10.0
#:import theme theme

<Side_Panel>:
  canvas.before:
    Color:
      rgba: 1,0,0,1
    Rectangle:
      size: self.size
      pos: self.pos
  rows: 5
  cols: 5
  size_hint_x: None
  size_hint_y: None
  size: 300, 11000
  pos: -300, 0

<Spacer@Label>:
  size_hint_x:None
  width: 10

<TimingBar>:
  canvas.before:
    Color:
      rgba: theme.transport_timing_bar
    Rectangle:
      size: self.size
      pos: self.pos
  rows: 2
  cols: 6
  spacing: 0
  padding:0
  size_hint_x: 1

  Label:
    text:"Min"
  Label:
    text:"Sec"
  Label:
    text:"Msec"
  Label:
    text:"Bar"
  Label:
    text:"Beat"
  Label:
    text:"Step"

  Label:
    id: min
    text:"000"
  Label:
    id: sec
    text:"00"
  Label:
    id: msec
    text:"000"
  Label:
    id: bar
    text:"000"
  Label:
    id: beat
    text:"00"
  Label:
    id: step
    text:"0.0"

<PlayheadControlBar>:
  canvas.before:
    Color:
      # rgba: theme.playhead_control_bar
    Rectangle:
      size: self.size
      pos: self.pos
  size_hint_y: None
  height: 30
  # background_color: theme.playhead_control_bar

<TransportButton@Button>:
  background_normal:''
  background_down:''
  background_color: theme.transport_buttons
  color: theme.transport_buttons_text
  font_size:'18sp'
  size_hint_x: .3

<NumericInput>:
  canvas.before:
    Color:
      rgba: theme.transport_tick_buttons
    Rectangle:
      size: self.size
      pos: self.pos
  cols: 2
  text: "hello"
  padding: 2 
  spacing: 2
  size_hint_x:.3
  Label:
    text:root.text
  Button:
    background_normal:''
    background_color: theme.numeric_buttons
    foreground_color: 0,0,0,1
    size_hint_x: None
    width:20
    text: '+'
    disabled: root.value >= root.max
    on_release:
      root.value += root.step
      root.value = min(root.value, root.max)
      root.valchange(root.text, root.value)
  TextInput:
    id: txt
    text: str(root.value)
    background_color: .2,.2,.2,1
    foreground_color: 1,1,1,1
    font_size: 12
    multiline: False
  Button:
    background_normal:''
    background_color: theme.numeric_buttons
    foreground_color: 0,0,0,1
    size_hint_x: None
    width:20
    text: '-'
    disabled: root.value <= root.min
    on_release:
      root.value -= root.step
      root.value = max(root.value, root.min)

<Transport>:
  canvas.before:
    Color:
      rgba: .15, .15, .15, 1
    Rectangle:
      size: self.size
      pos: self.pos
  height:400
  size_hint_y:None
  spacing:10
  padding:10
  id:transport
  BoxLayout:
    spacing:10
    NumericInput:
      min: 10
      max: 999
      value:120
      text:"BPM"
    NumericInput:
      text:"TPB"
      min: 1
      max: 12
      value: 4
    NumericInput:
      text:"BPB"
      min: 1
      max: 24
      value: 4
    NumericInput:
      text:"OCT"
      min: 1
      max: 8
      value: 5
    # Spacer:
    # TimingBar:
    TransportButton:
      text:"Open"
      on_press:root.button_open_project()
    TransportButton:
      text:"Save"
      on_press:root.button_save_project()
    TransportButton:
      text:"Options"
      on_press:root.button_options()
      text:"Play"
      on_press:root.button_play()
    ToggleButton:
      size_hint_x: .3
      background_normal:''
      text:"Loop"
      on_press:root.button_loop(self)
      background_color: theme.transport_buttons
    TransportButton:
      text:"Stop"
      on_press:root.button_stop()
    TransportButton:
      text:"<<"
      on_press:root.button_stop()
    TransportButton:
      text:"<"
      on_press:root.button_stop()
    TransportButton:
      text:">"
      on_press:root.button_stop()
    TransportButton:
      text:">>"
      on_press:root.button_stop()
    # Label:
    #   text:"Bpm"
    # TextInput:
    #   background_color: .33,.33,.33,1
    #   foreground_color: 1,1,1,1
    #   input_filter: "int"
    #   text:"120"
    #   size_hint: (None, 1)
    #   font_size: "24sp"
    #   multiline: False
    #   size:(50, 10)
    #   on_text_validate: root.bpm_text(self)
    Button:
      size_hint_x: .3
      background_normal:''
      background_color: theme.about_button
      text:"About"
      on_press:root.button_about()

<Row>:
  background_normal:''
  background_color: theme.left_file_browser_row
  color: theme.left_file_browser_row_text_color
  font_size: '12sp'
  value: ''
  size_hint_y:.1
  height:10
  id: r_but
  on_press: root.button_pressed()
  text: root.value

<FilenameLister>:
  id:rv
  scroll_type: ['bars','content']
  scroll_wheel_distance: dp(114)
  bar_width: dp(10)
  viewclass: 'Row'
  RecycleBoxLayout:
    default_size: None, dp(25)
    default_size_hint: 1, None
    size_hint_y: None
    height: self.minimum_height
    orientation: 'vertical'
    spacing: dp(2)

<SequencerLayout>:
  canvas.before:
    Color:
      # rgba: .15, .15, .15, 1
      # rgba: theme.Default['transport_buttons']
      rgba: theme.main_window_background_color
    Rectangle:
      size: self.size
      pos: self.pos
  orientation: "horizontal"
  padding: 20
  spacing: 20

<LoadDialog>:
  BoxLayout:
    size: root.size
    pos: root.pos
    orientation: "vertical"
    FileChooserListView:
      id: filechooser
      rootpath: "./"
      BoxLayout:
        size_hint_y: None
        height: 30
        Button:
          text: "Cancel"
          on_release: root.cancel()
        Button:
          text: "Load"
          on_release: root.load(filechooser.path, filechooser.selection, app.root.sgr.audio_items, app.root.sgr.canvas)

<SaveDialog>:
  text_input: text_input
  BoxLayout:
    size: root.size
    pos: root.pos
    orientation: "vertical"
    FileChooserListView:
      id: filechooser
      rootpath: "./"
      on_selection: text_input.text = self.selection and self.selection[0] or ''
    TextInput:
      id: text_input
      size_hint_y: None
      height: 30
      multiline: False
    BoxLayout:
      size_hint_y: None
      height: 30
      Button:
        text: "Cancel"
        on_release: root.cancel()
      Button:
        text: "Save"
        # on_release: app.root.file_system.write_project_file(app.root.sgr.audio_items, filechooser.path+text_input.text)
        on_release: root.save(filechooser.path, text_input.text, app.root.sgr.audio_items)
